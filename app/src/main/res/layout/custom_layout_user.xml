<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="4dp"
        android:clickable="true"
        android:id="@+id/userCardView"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:id="@+id/iv_user_logo"
                android:padding="@dimen/padding_8dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg_merryriana"
                android:layout_width="0dp"
                android:maxWidth="100dp"
                android:layout_weight="0.2"
                android:layout_height="match_parent"/>


        <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/padding_8dp"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/tv_user_name"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_mono"
                    tools:text="Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tv_user_email"
                    android:textColor="#A2A2A2"
                    android:fontFamily="@font/roboto_mono"
                    tools:text="Email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            <TextView
                    android:id="@+id/tv_user_phonenumber"
                    android:textColor="#A2A2A2"
                    android:fontFamily="@font/roboto_mono"
                    tools:text="Phone Number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/iv_user_edit_action"
                    android:layout_margin="4dp"
                    android:src="@drawable/edit"
                    android:layout_marginRight="@dimen/padding_8dp"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            <ImageView
                    android:id="@+id/iv_user_delete_action"
                    android:layout_margin="4dp"
                    android:layout_marginRight="@dimen/padding_8dp"
                    android:src="@drawable/delete"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>